---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import NavMenu from "./NavMenu";
import avatarImage from "@/assets/avatar.png";
import { GitHubLogoIcon, TwitterLogoIcon } from "@radix-ui/react-icons";
---

<header>
  <nav>
    <h2>
      <a href="/" aria-label="Return Home">
        <img
          src={avatarImage.src}
          style="height: 1.5rem; width: 1.5rem; border-radius: 100%;"
        />

        <span class="title">{SITE_TITLE}</span>
      </a>
    </h2>
    <NavMenu client:only="react" />
    <div class="social-links">
      <a href="https://twitter.com/justsml" target="_blank">
        <span class="sr-only">Follow justsml on Twitter</span>
				<TwitterLogoIcon />
      </a>
      <a href="https://github.com/justsml" target="_blank">
        <span class="sr-only">Go to justsml's GitHub repo</span>
				<GitHubLogoIcon />
      </a>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    /* box-shadow: 0 2px 8px rgba(var(--black), 5%); */
  }
  h2 {
    margin: 0;
    font-size: 1.6em;
		font-weight: 400;
		;
  }

	nav h2 a {
		display: flex;
		align-items: center;
		align-content: center;
		column-gap: 1rem;
		transition: all 0.2s ease-in;

		img {
			border: 1.8px solid transparent;
			transition: all 0.2s ease-in;
		}
	}
	nav h2 a:hover {
		transform: scale(1.025);
		color: var(--neon-cyan);

		img {
			border: 1.8px solid var(--neon-pink);
		}
	}

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    padding: 1em 0.5em;
  }
  nav a {
    color: var(--text-color);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--neon-cyan);
  }

	.social-links {
		width: 5rem;
		display: flex;
		align-items: center;
		justify-content: space-between;
		column-gap: 1rem;
		margin: 0;
		padding: 0;
	}
  .social-links svg {
		fill: var(--neon-cyan);
		fill-opacity: 70%;
		max-height: 3rem;
		max-width: 3rem;
		transition: all 0.2s ease-in;
		path {
			fill: var(--neon-cyan);
		}

		& :hover {
			fill-opacity: 100%;
			path {
				fill: var(--neon-pink);
			}
		}
	}
  .social-links a {
		max-height: 3rem;
		max-width: 3rem;
    display: flex;
		grid-row: auto;
		align-items: center;
		justify-content: center;
		margin: 0;
		padding: 0;
		/* scale: 1.75; */
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>

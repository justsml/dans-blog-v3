---
interface Props {
	date: string | undefined;
	updatedDate?: string | undefined;
}

const { date } = Astro.props;

const dateObj = date ? new Date(date) : undefined;
---

{dateObj && <time datetime={dateObj?.toISOString()}>
	{
		dateObj?.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
}
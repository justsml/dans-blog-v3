---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { Image } from "astro:assets";

type Props = CollectionEntry<"posts">["data"];

console.log("BlogPost.astro", Astro.props);

const { title, subTitle, date, modified, cover, category, tags } = Astro.props;

console.log("cover:", cover);
---
<html lang="en">
  <head>
    <BaseHead title={title} description={`${subTitle}`} />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 800px;
        line-height: 1.5;
        margin: 0 auto;
      }
      .hero-image {
        /* width: 100%; */
        max-width: 265px;
        border-radius: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        {
          cover && (
            <div class="hero-image">
              <Image
                src={cover}
                widths={[240, 540, 720, cover.width]}
                sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${cover.width}px`}
                style={{objectFit: 'cover', objectPosition: 'center'}}
                alt={`Article banner for ${subTitle}`}
              />
            </div>
          )
        }
        <div class="prose">
          <div class="title">
            <div class="date">
              <FormattedDate date={date} updatedDate={modified} />
            </div>
            <h1>{title}</h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
